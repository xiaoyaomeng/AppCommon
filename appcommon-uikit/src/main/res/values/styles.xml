<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="UnusedResources">
    <!-- Widget Styles -->
    <style name="GlipWidget" />

    <!-- Base Text Styles  Start -->
    <style name="GlipWidget.TextView">
        <item name="android:textColor">@color/colorPaletteOnBgIII200</item>
        <item name="android:textColorHint">@color/colorPaletteOnBgIII300</item>
        <item name="android:textColorHighlight">@color/colorPaletteOnBgVI100</item>
        <item name="android:textColorLink">@color/colorPalettePrimary</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">"sans-serif"</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="GlipWidget.TextView.Inverse">
        <item name="android:textColor">@color/colorPaletteOnBgVI100</item>
        <item name="android:textColorHighlight">@color/colorPaletteOnBgIII200</item>
    </style>

    <style name="GlipWidget.TextView.Label1">
        <item name="android:textSize">@dimen/text_size_x_small</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="GlipWidget.TextView.Label2">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="GlipWidget.TextView.Label3">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="GlipWidget.TextView.Label4">
        <item name="android:textSize">@dimen/text_size_x_medium</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="GlipWidget.TextView.Label5">
        <item name="android:textSize">@dimen/text_size_x_medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="GlipWidget.TextView.Label6">
        <item name="android:textSize">@dimen/text_size_x_large</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="GlipWidget.TextView.Label7">
        <item name="android:textSize">@dimen/text_size_header</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="GlipWidget.TextView.Title">
        <item name="android:textSize">@dimen/text_size_x_large</item>
        <item name="android:fontFamily">"sans-serif-medium"</item>
    </style>

    <style name="GlipWidget.TextView.Header">
        <item name="android:textSize">@dimen/text_size_header</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="GlipWidget.TextView.Display1">
        <item name="android:textSize">@dimen/text_size_display1</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingMultiplier">1.25</item>
    </style>

    <style name="GlipWidget.TextView.Display2">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">"sans-serif-light"</item>
    </style>

    <style name="GlipWidget.TextView.Display3">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="GlipWidget.TextView.Display4">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Base Text Styles End -->

    <style name="GlipWidget.TextView.SubBaseHead">
        <item name="android:textSize">@dimen/text_size_x_medium</item>
        <item name="android:textColor">@color/colorPaletteOnBgIII200</item>
        <item name="android:lineSpacingMultiplier">1.25</item>
    </style>

    <style name="GlipWidget.TextView.SubHead" parent="GlipWidget.TextView.SubBaseHead">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="GlipWidget.TextView.Summary" parent="GlipWidget.TextView.SubBaseHead">
        <item name="android:textColor">@color/colorPaletteOnBgIII300</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="GlipWidget.TextView.ListItemSecondaryText" parent="GlipWidget.TextView.Label2">
        <item name="android:textColor">@color/colorPaletteOnBgIII300</item>
    </style>

    <style name="GlipWidget.TextView.BottomSheetIcon">
        <item name="android:textColor">@color/color_bottom_sheet_icon</item>
        <item name="android:textSize">@dimen/font_icon_display_size</item>
    </style>

    <style name="GlipWidget.TextView.BottomSheetText" parent="GlipWidget.TextView.ListItemSecondaryText">
        <item name="android:textColor">@color/color_bottom_sheet_text</item>
    </style>

    <style name="GlipWidget.TextView.Caption" parent="GlipWidget.TextView.Label2">
        <item name="android:textColor">@color/colorPaletteOnBgIII300</item>
        <item name="android:textColorLink">@color/colorPalettePrimary</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="GlipWidget.TextView.Banner" parent="GlipWidget.TextView.Label2">
        <item name="android:textColor">@color/colorPaletteOnBgVI100</item>
        <item name="android:textSize">@dimen/banner_text_size</item>
        <item name="android:background">@color/colorPaletteBgVI</item>
        <item name="android:minHeight">@dimen/banner_item_height</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingEnd">@dimen/banner_item_padding_end</item>
        <item name="android:paddingStart">@dimen/banner_item_padding_start</item>
        <item name="android:paddingTop">@dimen/banner_item_padding_top</item>
        <item name="android:paddingBottom">@dimen/banner_item_padding_bottom</item>
    </style>

    <style name="GlipWidget.TextView.Banner.Error">
        <item name="android:textColor">@color/colorPaletteAlert200</item>
    </style>

    <style name="GlipWidget.TextView.Banner.Success">
        <item name="android:textColor">@color/colorPaletteSuccess200</item>
    </style>

    <style name="GlipWidget.TextView.Banner.Warning">
        <item name="android:textColor">@color/colorPaletteWarning200</item>
    </style>

    <style name="GlipWidget.TextView.Banner.Dnd">
        <item name="android:textColor">@color/colorPaletteAlert200</item>
    </style>

    <style name="GlipWidget.TextView.Banner.Common">
        <item name="android:singleLine">false</item>
    </style>

    <style name="GlipWidget.TextView.ListItemCaption" parent="GlipWidget.TextView.Label2">
        <item name="android:textColor">@color/color_night_selector</item>
    </style>

    <style name="GlipWidget.TextView.FieldTitle">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/colorPaletteOnBgIII300</item>
    </style>

    <style name="GlipWidget.TextView.FieldSummary">
        <item name="android:textSize">@dimen/text_size_x_medium</item>
        <item name="android:textColor">@color/colorPaletteOnBgIII200</item>
    </style>


    <!-- Edit Text styles  Start -->
    <style name="GlipWidget.EditText" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textColor">@color/colorPaletteOnBgIII200</item>
        <item name="android:textColorHighlight">@color/colorPalettePrimary</item>
        <item name="android:textColorHint">@color/colorPaletteOnBgIII300</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_x_medium</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="GlipWidget.EditText.Appbar">
        <item name="android:background">@null</item>
        <item name="android:inputType">textCapSentences|textMultiLine</item>
        <item name="android:textColor">@color/colorPaletteOnBgIII200</item>
        <item name="android:textColorHighlight">@color/colorPalettePrimary100</item>
        <item name="android:textColorHint">@color/colorPaletteOnBgIII300</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:maxLines">3</item>
        <item name="android:minHeight">48dp</item>
    </style>


    <style name="GlipWidget.EditText.Field">
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/colorPaletteOnBgIII300</item>
    </style>

    <style name="GlipWidget.EditText.Cleanable">
        <item name="clean_button_color">@color/colorPaletteOnBgIII300</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- Edit Text styles End -->

    <!-- Button styles -->
    <style name="GlipWidget.Button">
        <item name="android:layout_width">@dimen/long_button_width</item>
        <item name="android:layout_height">@dimen/long_button_height</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPaletteOnBgVI100</item>
        <item name="android:textSize">@dimen/text_size_x_medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:background">@drawable/btn_rect_primary</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="GlipWidget.TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/colorPaletteOnBgIII300</item>
    </style>

    <style name="GlipWidget.TabTextAppearance.Dark">
        <item name="android:textColor">@color/colorPaletteOnBgIII300</item>
    </style>

    <style name="GlipWidget.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
        <item name="tabTextAppearance">@style/GlipWidget.TabTextAppearance</item>
        <item name="tabIndicatorColor">@color/colorPaletteSecondary</item>
        <item name="tabSelectedTextColor">@color/colorPaletteSecondary</item>
        <item name="tabRippleColor">@color/colorRippleOnTabLayout</item>
    </style>

    <style name="GlipWidget.TabLayout.Scrollable">
        <item name="tabMinWidth">@dimen/tab_min_width</item>
        <item name="tabMode">scrollable</item>
    </style>

    <style name="GlipWidget.TabLayout.Dark">
        <item name="tabTextAppearance">@style/GlipWidget.TabTextAppearance.Dark</item>
        <item name="tabIndicatorColor">@color/colorPaletteOnBgVI100</item>
        <item name="tabSelectedTextColor">@color/colorPaletteOnBgVI100</item>
    </style>

    <style name="GlipWidget.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text_size_x_large</item>
    </style>

    <style name="GlipWidget.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">72dp</item>
        <item name="contentInsetLeft">72dp</item>
        <item name="contentInsetEnd">18dp</item>
        <item name="contentInsetRight">18dp</item>
        <item name="titleTextAppearance">@style/GlipWidget.Toolbar.Title</item>
    </style>


    <style name="GlipWidget.MembersChipView">
        <item name="android:background">@null</item>
        <item name="android:lineSpacingExtra">6dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:enabled">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:textColor">@color/colorPaletteOnBgIII300</item>
        <item name="android:inputType">none</item>
        <item name="chipBackground">@drawable/bg_contacts_member_chip</item>
        <item name="chipBackgroundInvalid">@drawable/bg_contacts_person_chip_invalid</item>
        <item name="chipTextSize">@dimen/text_size_x_medium</item>
        <item name="collapseCountTextColor">@color/colorPalettePrimary</item>
    </style>

    <style name="GlipWidget.Fab">
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@color/colorPaletteRippleOnColorful</item>
    </style>

    <style name="GlipWidget.Fab.Progress">
        <item name="android:layout_margin">@dimen/activity_horizontal_margin</item>
    </style>


    <style name="GlipWidget.KeyboardSwitcher">
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@color/colorPaletteRippleOnWhite</item>
    </style>

    <style name="GlipWidget.SwitchButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/compound_button_height</item>
        <item name="android:gravity">center_horizontal|start</item>
        <item name="android:paddingStart">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingEnd">@dimen/activity_horizontal_margin</item>
        <item name="android:textColor">@color/colorPaletteOnBgIII200</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>


    <style name="GlipWidget.RadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/compound_button_height</item>
    </style>

    <style name="GlipWidget.CheckBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/compound_button_height</item>
    </style>

    <style name="GlipWidget.ProgressBar" parent="Widget.AppCompat.ProgressBar" />

    <style name="GlipWidget.ProgressBar.Inverse" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTintMode">src_atop</item>
        <item name="android:indeterminateTint">@color/colorPaletteOnBgVI100</item>
    </style>

    <style name="GlipWidget.ProgressBarMedium" parent="Widget.AppCompat.ProgressBar">
        <item name="android:minWidth">@dimen/progress_medium_size</item>
        <item name="android:minHeight">@dimen/progress_medium_size</item>
        <item name="android:maxWidth">@dimen/progress_medium_size</item>
        <item name="android:maxHeight">@dimen/progress_medium_size</item>
    </style>

    <style name="GlipWidget.ProgressBarLarge" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/progressbar_indeterminate_medium</item>
        <item name="android:minWidth">@dimen/progress_large_size</item>
        <item name="android:minHeight">@dimen/progress_large_size</item>
        <item name="android:maxWidth">@dimen/progress_large_size</item>
        <item name="android:maxHeight">@dimen/progress_large_size</item>
    </style>

    <style name="GlipWidget.ProgressBarSmall" parent="Widget.AppCompat.ProgressBar" />

    <style name="GlipWidget.DialogTitle">
        <item name="android:textColor">@color/colorPalettePrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="GlipWidget.DialogButton">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:textColor">@color/color_button_bar</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="GlipWidget.ButtonBarButtonStyle" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/color_button_bar</item>
    </style>

    <style name="GlipWidget.Animation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>

    <style name="GlipWidget.SnackMenuAnimation" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/slide_top_in</item>
        <item name="android:windowExitAnimation">@anim/slide_top_out</item>
    </style>

    <style name="GlipWidget.DialogAnimation.Alpha" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/alpha_in</item>
        <item name="android:windowExitAnimation">@anim/alpha_out</item>
    </style>

    <style name="GlipWidget.datePickerStyle" parent="@android:style/Widget.Material.DatePicker">
        <item name="android:headerBackground">@color/colorPaletteBgIII</item>
    </style>


    <style name="GlipWidget.timePickerStyle" parent="@android:style/Widget.Material.TimePicker">
        <item name="android:headerBackground">@color/colorPaletteBgIII</item>
        <item name="android:numbersBackgroundColor">@color/colorPaletteBgIII</item>
    </style>

    <style name="GlipWidget.ActionMode.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/colorPaletteOnBgVI100</item>
        <item name="android:textSize">@dimen/text_size_x_large</item>
    </style>

    <style name="GlipWidget.ActionMode.Subtitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">@color/colorPaletteOnBgVI100</item>
    </style>

    <style name="GlipWidget.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="background">@color/colorPaletteOnBgIII300</item>
        <item name="titleTextStyle">@style/GlipWidget.ActionMode.Title</item>
        <item name="subtitleTextStyle">@style/GlipWidget.ActionMode.Subtitle</item>
    </style>

    <style name="GlipWidget.ActionModeCloseButton" parent="Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:tint">@color/colorPaletteOnBgVI100</item>
    </style>

    <style name="GlipWidget.BannerLayout">
        <item name="android:background">@color/colorPaletteBgVI</item>
        <item name="android:layout_height">@dimen/banner_item_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingEnd">@dimen/banner_item_padding_end</item>
        <item name="android:paddingStart">@dimen/banner_item_padding_start</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="GlipWidget.TextView.BannerError" parent="GlipWidget.TextView.Label2">
        <item name="android:textColor">@color/colorPaletteOnBgVI100</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingEnd">@dimen/banner_item_padding_end</item>
    </style>

    <style name="GlipWidget.TextView.SpinnerDropDownItem">
        <item name="android:background">@drawable/bg_checkable_item</item>
        <item name="android:textColor">@color/colorPaletteOnBgIII200</item>
        <item name="android:paddingStart">22dp</item>
        <item name="android:paddingEnd">22dp</item>
        <item name="android:textSize">@dimen/text_size_x_medium</item>
    </style>

    <style name="GlipWidget.TextView.BottomNavigationActive">
        <item name="android:textSize">11dp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="GlipWidget.TextView.BottomNavigationInactive">
        <item name="android:textSize">11dp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="GlipWidget.ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:paddingStart">@dimen/search_icon_padding</item>
        <item name="android:paddingEnd">@dimen/search_icon_padding</item>
    </style>

    <style name="GlipWidget.SnackMenuAction">
        <item name="android:textSize">@dimen/font_icon_display_size</item>
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_margin">@dimen/dimen_8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_snack_menu_icon</item>
    </style>

    <style name="GlipWidget.SwitchPreference" parent="@style/Preference.SwitchPreference.Material">
        <item name="android:widgetLayout">@layout/disable_preference_widget_switch</item>
    </style>

    <style name="GlipWidget.Switch">
        <item name="android:thumbTint">@color/color_settings_switch_thumb_selector</item>
    </style>
</resources>
