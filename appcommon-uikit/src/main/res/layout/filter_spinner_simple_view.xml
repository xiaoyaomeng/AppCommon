<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dimen_48dp"
    android:layout_alignParentEnd="true"
    android:orientation="horizontal"
    android:paddingStart="@dimen/dimen_16dp"
    android:paddingEnd="@dimen/dimen_16dp">

    <TextView
        android:id="@+id/filterLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/dimen_2dp"
        android:contentDescription="@string/accessibility_filter_show_colon"
        android:focusable="false"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical"
        android:text="@string/show_colon"
        android:textColor="@color/colorPaletteOnBgIII300" />

    <TextView
        android:id="@+id/filterTextView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/dimen_12dp"
        android:focusable="false"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical"
        android:textColor="@color/colorPaletteOnBgIII300"
        tools:text="All" />

    <com.glip.widgets.icon.FontIconTextView
        android:id="@+id/filterFontView"
        android:layout_width="@dimen/filter_icon_size"
        android:layout_height="@dimen/dimen_48dp"
        android:gravity="center"
        android:importantForAccessibility="no"
        android:text="@string/icon_filter"
        android:textColor="@color/colorPaletteOnBgIII300"
        android:textSize="@dimen/font_icon_x_large_size" />
</LinearLayout>