<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/dimen_16dp"
    android:paddingBottom="@dimen/dimen_16dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_text"
            android:textColor="@color/color_field_item_title_selector"
            android:textSize="@dimen/text_size_x_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Title" />

        <TextView
            android:id="@+id/summary_text"
            android:paddingTop="@dimen/dimen_4dp"
            style="@style/GlipWidget.TextView.Summary"
            android:textColor="@color/color_field_item_summary_selector"
            android:textSize="@dimen/text_size_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Summary" />

    </LinearLayout>

    <com.panghu.uikit.view.DisableAppearanceSwitch
        android:id="@+id/switch_view"
        style="@style/GlipWidget.Switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dimen_8dp"
        android:paddingEnd="0dp" />

</LinearLayout>